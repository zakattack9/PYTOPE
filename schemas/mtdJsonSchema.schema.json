{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Modular Test Designer JSON Schema",
    "description": "This is a schema validates the modular test designer",
    "type": "object",
    "properties": {
        "docker_images": {
            "type": "object",
            "patternProperties": {
                "^.*$": {
                    "$ref": "#/$def/docker_image_name"
                }
            }
        },
        "tests": {
            "type": "object",
            "patternProperties": {
                "^.*$": {
                    "$ref": "#/$def/test_name"
                }
            }
        }
    },
    "$def": {
        "docker_image_name": {
            "type": "object",
            "properties": {
                "docker_image_id": {
                    "type": "number"
                },
                "docker_image_description": {
                    "type": "string"
                },
                "tests": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                }
            },
            "additionalProperties": false,
            "required": [
                "docker_image_id",
                "docker_image_description",
                "tests"
            ]
        },
        "test_name": {
            "type": "object",
            "properties": {
                "test_id": {
                    "type": "number"
                },
                "test_blocks": {
                    "type": "array",
                    "items": {
                        "$ref": "#/$def/test_block_items"
                    }
                }
            },
            "additionalProperties": false,
            "required": [
                "test_id",
                "test_blocks"
            ]
        },
        "test_block_items": {
            "type": "object",
            "properties": {
                "block_type": {
                    "enum": [
                        "RUN",
                        "ENV",
                        "BKG_S",
                        "BKG_T"
                    ]
                },
                "command": {
                    "type": "string"
                },
                "command_output_assertion": {
                    "enum": [
                        "NO_VERIFY",
                        "VERIFY_EMPTY",
                        "VERIFY_REGEX"
                    ]
                },
                "regex": {
                    "type": "string"
                }
            },
            "additionalProperties": false,
            "required": [
                "block_type",
                "command",
                "command_output_assertion"
            ]
        }
    }
}
{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "",
    "title": "CLI Package Mapping",
    "description": "JSON schema to define how a CLI package's command paths, arguments, and argument types will be mapped out",
    "type": "object",
    "commands": {
      "init": {
        "description": "Create a new local repository",
        "type": "string"
    
      },
      "add": {
        "description": "Add files",
        "type": "string",
        "arguments": ["<filename>"]
      },
      "commit": {
        "description": "Commit changes",
        "type": "string",
        "arguments": ["-m", "-a"]
      },
      "push origin master": {
        "description": "push changes",
        "type": "string",
        "arguments": ["<server>"]
      },    
      "status": {
        "description": "push changes",
        "type": "string"
      },
      "remote add origin ": {
        "description": "connect to a remote repository",
        "type": "string",
        "arguments": ["<server>"]
      },
      "checkout -b": {
        "description": "checkout other branch",
        "type": "string"
      },
      "pull": {
        "description": "update from remote repository",
        "type": "string"
      },
      "merge": {
        "description": "merge to different branch",
        "type": "string",
        "arguments": ["<branchname>"]
      },
      "diff": {
        "description": "view merge conflicts",
        "type": "string",
        "arguments": ["<filename>", "<sourcebranch>", "<targetbranch>"]
      },
      "grep": {
        "description": "search working directory",
        "type": "string"
      }
    }
  }
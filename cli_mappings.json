{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "CLI Package Mapping",
    "description": "JSON schema to define how a CLI package's command paths, arguments, and argument types will be mapped out",
    "type": "object",
    "properties": {
          "sub_command": {
                "$ref": "#/$def/sub_sub_command"
          }
        },
    "$def":{
        "sub_sub_command":{
            "type":"object",
            "properties":{
                "command":{
                    "type":"string"
                },
                "command_arguments":{
                    "type":"object",
                    "properties":{
                        "$ref": "#/$def/arguments"
                    }
                }
            }
        },
        "arguments":{
            "type":"object",
            "properties":{
                "arguments_content":{
                    "type":"string"
                },
                "sub_arguments":{
                    "$ref": "#/$def/arguments"
                }
            }
        }
    }
}
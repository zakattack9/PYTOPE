{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "",
    "title": "CLI Package Mapping",
    "description": "JSON schema to define how a CLI package's command paths, arguments, and argument types will be mapped out",
    "type": "object",
    "properties": {
      "loaded_package":{
        "type":"object",
        "required": true,
        "properties": {
          "command": {
            "type":"object",
            "required": true,
            "properties":{
              "sub_commands":{
                "items": {
                  "type": "object"
                },
                "required": false,
                "properties":{
                  "arguments":{
                    "items": {
                      "type": "string"
                    },
                    "required": false,
                    "properties":{
                      "sub_arguments": {
                        "items": {
                          "type": "string"
                        },
                        "required": false
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
}








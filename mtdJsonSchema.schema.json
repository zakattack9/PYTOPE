{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "string",
    "description": "This is a schema validates the modular test designer",
    "type": "object",
    "properties": {
        "docker_images": {
            "type": "object",
            "patternProperties": {
                "*": {
                    "$ref": "#/$def/docker_image_name"
                }
            },
            "additionalProperties": {
                "$ref": "#/$def/docker_image_name"
            }
        },
        "tests": {
            "type": "object",
            "patternProperties": {
                "*": {
                    "$ref": "#/$def/test_name"
                }
            },
            "additionalProperties": {
                "$ref": "#/$def/test_name"
            }
        }
    },
    "$def": {
        "docker_image_name": {
            "type": "object",
            "properties": {
                "docker_image_id": "int",
                "docker_image_description": "string",
                "tests": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                }
            },
            "required": ["docker_image_id","docker_image_description","test"]
        },
        "test_name": {
            "type": "object",
            "properties": {
                "test_id": "int",
                "test_blocks": {
                    "type": "array",
                    "items": {
                        "$ref": "#/$def/test_block_items"
                    }
                }
            },
            "required": ["test_id","test_blocks"]
        },
        "test_block_items": {
            "type": "object",
            "properties": {
                "block_type": {
                    "enum": [
                        "RUN",
                        "ENV",
                        "BKG_S",
                        "BKG_T"     
                    ]
                },
                "command": {
                    "type": "string"
                },
                "command_output_assertion": {
                    "enum": [
                        "NO_VERIFY",
                        "VERIFY_EMPTY",
                        "VERIFY_REGEX"
                    ]
                },
                "regex": {
                    "type": "string"
                }
            },
            "required":["block_type","command","command_output_assertion"]    
        }
    }
}
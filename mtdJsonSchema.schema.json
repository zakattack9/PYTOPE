{
    "docker_images": {
        "docker_image_name": {
            "docker_image_id": "int",
            "docker_image_description": "string",
            "tests": {
                "type": "array",
                "items": {
                    "type": "test_name"
                }
            }
        }
    },
    "tests": {
        "test_name": {
            "type": "object",
            "test_id": "int",
            "description": "string",
            "test_blocks": {
                "type": "array",
                "test_block_items": [
                    {
                        "test_block_type": {
                            "type": "string",
                            "enum": [
                                "RUN",
                                "ENV",
                                "BKG_S",
                                "BKG_T"
                            ]
                        }
                    },
                    {
                        "command": {
                            "type": "string"
                        }
                    },
                    {
                        "verify_output_type": {
                            "type": "string",
                            "enum": [
                                "NO_VERIFY",
                                "VERIFY_EMPTY",
                                "VERIFY_REGEX"
                            ]
                        }
                    },
                    {
                        "verify_output": {
                            "type": "string",
                            "enum": [
                                "null",
                                "string"
                            ]
                        }
                    }
                ]
            }
        }
    }
}